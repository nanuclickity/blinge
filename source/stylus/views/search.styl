		// &:nth-child(3n)
		// 	animation-duration time_4x
		// &:nth-child(4n)
		// 	animation-duration time_5x
		
		// 	
			
.view-search .item-result
	.product-picture
		height 300px
		width 100%
		background-color rgba(#000, 0.1)
		
	.product-details
		height 100px
		padding 10px 
		margin-top 8px
		list-style none
		li.name, li.designer, li.prices
			display block
			padding 0px 8px
		li.designer
			display block
		
		li.name
			font-family font_light
			font-size 18px
			color lighten(theme_font, 20%)
		
		li.designer
			font-family font_regular
			font-size 12px
			color lighten(theme_font, 10%)
		li.prices
			margin-top 6px
			clearfix()
			color lighten(theme_font, 20%)
		
		.price-rental, .price-retail
			display block
		.price-rental
			float left
		.price-retail
			float right