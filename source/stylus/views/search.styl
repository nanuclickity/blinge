.view-search
	// border-top 1px theme_border solid
	width 100%
	height 100%
	position relative
	z-index z1
	clearfix()
	
	.filters-box
		absolute top left bottom
		z-index z4
		width 300px
	.results-box
		z-index z2
		absolute top right left bottom
		margin-left 300px
		

.view-search .filters-box
	position absolute
	height 100%
	padding gutter_x

.view-search .list-results
	list-style none
	padding 0
	margin 0
	Flex-Horizontal()
	flex-wrap wrap
	
	
	.item-result
		display block
		margin 18px
		
		width 30%
		transform-origin center center
		animation fadeIn time_2x
		border 1px rgba(#000, 0.12) solid
		
		&:hover
			border-color rgba(#000, 0.24)
