.view-home
	width 1080px
	margin 20px auto
	display block 


.view-home .showcase
	position relative
	Flex-Horizontal()
	height 450px
	.showcase-control
		absolute top left bottom
		z-index z4
		width 300px
		background-color rgba(#000, 0.48)
		
	.showcase-images
		flex 1
		position relative
		
		img
			absolute top left right bottom
			z-index z1
			display none
		img.active
			z-index z2
			display block
			animation fadeIn time_2x
			
.view-home .reserve-a-dress
	margin 60px 24px 0 24px
	color #ddd
	h3, button
		text-align center
	
	input, select
		border 1px rgba(#000, 0.2) solid
		border-radius 2px
		background-color rgba(#fff, 0.4)
		
	.date-picker
		margin-bottom 8px
		input
			width 100%
			padding 6px 12px
	.other-options
		clearfix()
	.size-picker
		display block
		float left
		width 100px
		height 40px
	.zip-code
		display block
		float right
		width 100px
		input
			width 100%

	.btn-search
		display block
		margin-top 10px
		background-color transparent
		border-color #999
		color #ccc
		width 100%
		i + .icon-text
			display inline-block
			margin-left 6px
		
.view-home .big-images
	display block
	Flex-Horizontal()
	width 100%
	height 360px
	margin-top 40px
	justify-content space-between
	.image-left, .image-right
		flex 1
		img
			width 100%
		.title
			font-family font_regular
			font-size 24px
			text-align center
			margin-bottom 8px
			height 34px
			
	.image-left
		padding-right 10px
	.image-right
		padding-left 10px
		

.view-home .most-popular
	margin-top 40px
	.list-hr-scroll
		width 100%
		white-space no-wrap
		overflow-x auto
		overflow-y hidden
	li.item
		margin 0 24px
		&:first-child
			margin-left 0
		&:last-child
			margin-right 0
		