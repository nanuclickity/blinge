
HeaderButton()
	font_color = theme_font
	border none
	border-top 4px transparent solid
	padding 12px 16px
	opacity .64

	color font_color
	&:hover, &:active, &:focus
		opacity 1
		box-shadow none
		border-color rgba(#000, 0.2)

	&:active
		border-color rgba(color_base, 0.6)
	

#app-header
	.header-inner
		padding 8px 0 0 0
		position relative
		clearfix()
		-webkit-app-region drag
		
		// stop1 = rgba(#fff, 0.45)
		// stop2 = rgba(#fff, 0)
		// background-image linear-gradient(top, stop1, stop2)
		background-color rgba(#fff, 0.88)
		color theme_font
		
	.top-shelf, .bottom-shelf
		clearfix()
		display block
		

#app-header .bottom-shelf
	.list-categories, .search-bar
		display inline-block
		margin-right 24px
#app-header .list-categories
	padding-left 4px
	list-style none
	margin 0
	li.cat-item
		
		border-width 0 0 2px 0
		
		font-family font_semibold
		color theme_font
		padding 10px 12px
		opacity 0.5
		&:hover
			opacity 0.8
		&:active
			opacity 1
		a
			color inherit
			font inherit

#app-header .search-bar
	display block
	float right
	.search-icon, .search-input
		display inline-block

	.search-input input
		border 1px transparent solid
		padding 4px 8px
		&:hover, &:focus, &:active
			outline none



#app-header
	.title
		display block
		margin -8px 0
		-webkit-app-region no-drag
		float left
	
		font-family font_semibold
		HeaderButton()
		font-size 18px
		font-family font_light
		padding 10px 16px
		a
			color inherit
		&:hover
			color color_base
		&:active
			color darken(color_base, 10%)



#app-header .list-right-nav
	list-style none
	float right
	> li.list-item
		display inline-block
		
		margin -8px 0 0 8px
		a
			display block
			HeaderButton()
			padding 10px 12px
			color inherit
			font-size inherit
		&:last-child
			margin-right 8px